@model Covid19Testing.ViewModels.LabTestDetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Update COVID-19 TESTING FORM</h2>

<div align="right">
    <a asp-action="Index">COVID-19 TESTING RESULTs</a>
</div>

