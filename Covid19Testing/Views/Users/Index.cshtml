@model IEnumerable<Covid19Testing.Models.TblUsers>

@{
    ViewData["Title"] = "Index";
}

<h2>Users</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                Role
                @*@Html.DisplayNameFor(model => model.)*@
            </th>
            <th>
                Locked
                @*@Html.DisplayNameFor(model => model.LastunlockedBy)*@
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LockTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LockedBy)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserroleNavigation.Rolename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.locked)
            </td>

            <td>
                @if (item.LockTime == null)
                {
                    @Html.Raw("-")
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.LockTime)

                }

            </td>
            <td>
                @if (item.LockedBy == null)
                {
                    @Html.Raw("-")
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.LockedBy)
                }
                </td>


            <td>
                @if (User.Identity.Name != item.Username)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @Html.Raw("|")
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
