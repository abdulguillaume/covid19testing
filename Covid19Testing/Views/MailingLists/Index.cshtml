@model IEnumerable<Covid19Testing.Models.TblMailingLists>

@{
    ViewData["Title"] = "Index";
}

<h2>Mailing Lists</h2>

@{ 
    
        var Groups = (Dictionary<int, string>)ViewBag.Groups;

}

<p>
    <a asp-action="Create">Add New Email</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="width: 40%;">
                Maling groups
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsertBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td >
                @foreach(var g in item.TblEmailGroupMapping)
                {
                    @Html.Raw(Groups[g.MailingGroup.Value]+"; ")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsertBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
