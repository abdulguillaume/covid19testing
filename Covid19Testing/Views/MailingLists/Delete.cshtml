                @Html.Raw(Groups[g.MailingGroup.Value] + "; ")
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InsertTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InsertTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.InsertBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InsertBy)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
