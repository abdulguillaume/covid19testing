@model Covid19Testing.ViewModels.Rpt1ViewModel;

@{
    ViewData["Title"] = "Home Page";
}
<br />

@*https://www.w3schools.com/w3css/w3css_responsive.asp*@

<header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
</header>

<div align="right">
    <form method="get" asp-controller="Home" asp-action="search">
        <div class="input-group">
            From: <input id="date1" name="date1" value="@ViewBag.date1" max="" type="date" /> <button type="submit">Search</button>
        </div>
    </form>
</div>


<hr />

<div class="w3-row-padding w3-margin-bottom">

    <div class="w3-rest w3-round-xlarge">
        <div class="w3-container w3-gray w3-padding-16">
            <div class="w3-left"><i class="fa fa-check-circle w3-xxxlarge"></i></div>
            <div class="w3-right">
                <h3>@Model.grandTotal.SampleTested</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Samples Tested</h4>
        </div>
    </div>

    <br />

    <div class="w3-quarter">
        <div class="w3-container w3-orange w3-padding-16">
            <div class="w3-left"><i class="fa fa-check-circle w3-xxxlarge"></i></div>
            <div class="w3-right">
                <h3>@Model.grandTotal.ProcessingInLab</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Processing-In Lab</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-red w3-padding-16">
            <div class="w3-left"><i class="fa fa-check-circle w3-xxxlarge"></i></div>
            <div class="w3-right">
                <h3>@Model.grandTotal.PendingApproval</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Pending Approval</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-blue w3-padding-16">
            <div class="w3-left"><i class="fa fa-check-circle w3-xxxlarge"></i></div>
            <div class="w3-right">
                <h3>@Model.grandTotal.Approved</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Approved</h4>
        </div>
    </div>
    <div class="w3-quarter">
        <div class="w3-container w3-green w3-text-white w3-padding-16">
            <div class="w3-left"><i class="fa fa-check-circle w3-xxxlarge"></i></div>
            <div class="w3-right">
                <h3>@Model.grandTotal.Published</h3>
            </div>
            <div class="w3-clear"></div>
            <h4>Published</h4>
        </div>
    </div>
</div>

<br />

@if (@Model.grandTotal.SampleTested > 0)
{
    <div class="w3-container">
        <h2 align="center">Covid19 Tests Interpretation per Status</h2>

        <table class="w3-table-all">
            <tr>
                <th>Interpretation</th>
                <th>Sample Tested</th>
                <th>Process-In Lab</th>
                <th>Pending Approval</th>
                <th>Approved</th>
                <th>Published</th>

                @*<th class="w3-center">Published</th>*@
            </tr>

            @foreach (var m in Model.totalPerInterpretation)
            {
                <tr>
                    <th>@Html.DisplayFor(model => m.Interpretation)</th>
                    <th class="w3-center">@Html.DisplayFor(model => m.SampleTested)</th>
                    <th class="w3-center">@Html.DisplayFor(model => m.ProcessingInLab)</th>
                    <th class="w3-center">@Html.DisplayFor(model => m.PendingApproval)</th>
                    <th class="w3-center">@Html.DisplayFor(model => m.Approved)</th>
                    <th class="w3-center">@Html.DisplayFor(model => m.Published)</th>
                </tr>
            }

        </table>
    </div>
}



